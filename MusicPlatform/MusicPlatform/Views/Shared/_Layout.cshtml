<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="https://www.youtube.com/iframe_api"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/custom.css")


</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: black;">
        <div class="container">
            @Html.ActionLink("Crescendo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Listener"))
                    {
                        <li>@Html.ActionLink("Songs", "Index", "Songs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Albums", "Index", "Albums", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Artists", "Index", "Artists", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Playlists", "Index", "Playlists", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Playlists", "MyPlaylists", "Playlists", new { area = "" }, new { @class = "nav-link" })</li>


                        <li>@Html.ActionLink("Edit My Profile", "Edit", "Listeners", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole("Artist"))
                    {
                        <li>@Html.ActionLink("My Profile", "Details", "Artists", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Songs", "Index", "Songs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Albums", "Index", "Albums", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Edit My Profile", "Edit", "Artists", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
                 @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
