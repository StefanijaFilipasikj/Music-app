@using MusicPlatform.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<main aria-labelledby="title" class="p-5 mt-4 d-flex justify-content-center">
    <div class="rounded-4 col-5 p-5 border border-1 border-white bg-black" style="
        width: 30rem;
        min-height: 37rem;
        background: url('https://i.pinimg.com/564x/9d/91/cc/9d91cc2f3a66475a55c805b469122f0c.jpg');
        background-repeat: no-repeat;
        background-position-y: 6rem;
        filter: contrast(110%) opacity(50%);"
         >

        <h2 id="title" class="mt-3 mb-5 text-center">@ViewBag.Title</h2>
        <div>
            <div>
                <section id="loginForm" class="mt-2 text-center px-5">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row mb-4">
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter email...", @class = "form-control btn btn-dark rounded-0" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password...", @class = "form-control btn btn-dark rounded-0" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-4 text-start">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-5">
                                <button type="submit" class="btn btn-dark rounded-5 form-control">Login</button>
                            </div>
                            <div>
                                <p class="text-start mb-0">Don't have an account?</p>
                                <a href="/Account/Register" class="btn btn-dark rounded-5 form-control">Register as a new user</a>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>

    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}